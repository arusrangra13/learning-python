#marks avg
def marks_avg(a,b,c,d,e,f):
    sum=a+b+c+d+e+f
    avg=sum/6
    print(avg)
    return avg

marks_avg(39,31,46,40,47,44)

#waf to print the lenngth of a list.(list is a parameter)
cities= ["Delhi","Mumbai","Chennai","Kolkata","Bangalore"]
heros = ["Superman","Batman","Spiderman","Ironman","Thor"]
def print_lens(list):
    print(len(list))
    
print_lens(cities)
print_lens(heros)


# waf to print the elements of list in a single line.(list is a parameter)

cities= ["Delhi","Mumbai","Chennai","Kolkata","Bangalore"]
heros = ["Superman","Batman","Spiderman","Ironman","Thor"]


def print_lens(list):
    print(len(list))

def print_list(list):
    for item in list:
        print(item,end=" ")

